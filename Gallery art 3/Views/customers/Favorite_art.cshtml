@model IEnumerable<Gallery_art_3.Models.favorite_artwork>
@{
    ViewBag.Title = "Favorite_art";
}

<h2>Favorite_art</h2>

@foreach(var item in Model)
            {
                <div style="display: inline-block; margin: 20px;padding:5px">

                    <div>@Html.DisplayFor(modelItem => item.artwork.Title)</div>
                    <div style="margin-bottom:10px">@Html.DisplayFor(modelItem => item.artwork.category.Name)</div>
                    <div><img src="~/@item.artwork.img_path" style="width:200px;height:200px" /></div>
                    <div>

                        @Html.ActionLink("Xem", "Details", "artworks", new { id = item.artwork.Id }, null)
                    </div>
                    <div>
                        @{ var status = item.artwork.status;}
                        @if (status == 1)
                        {
                            ViewBag.Status = "Đã Bán";
                        }
                        else if (status == 2)
                        {
                            ViewBag.Status = "Đang đấu giá";
                        }
                        else
                        {
                            ViewBag.Status = "Đang bán";
                        }
                        @ViewBag.Status
                    </div>


                </div>





            }